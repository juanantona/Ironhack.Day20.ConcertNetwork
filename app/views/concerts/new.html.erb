<%= form_for @concert do |f| %>

<form class="form-horizontal">
  <fieldset>
    <legend>New concert</legend>
    
    <div class="form-group">
      <label class="col-lg-2 control-label">Band</label>
      <div class="col-lg-10">
        <%= f.text_field :band, class:"form-control",  placeholder:"Band" %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-lg-2 control-label">Venue</label>
      <div class="col-lg-10">
        <%= f.text_field :venue, class:"form-control",  placeholder:"Venue" %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-lg-2 control-label">City</label>
      <div class="col-lg-10">
        <%= f.text_field :city, class:"form-control",  placeholder:"City" %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-lg-2 control-label">Date</label>
      <div class="col-lg-10">
        <%= f.date_field :city, class:"form-control", placeholder:"Date" %>
      </div>
    </div>
    <div class="form-group">
      <label for="textArea" class="col-lg-2 control-label">Description</label>
      <div class="col-lg-10">
        <%= f.text_area :description, rows: 3, columns: 40, class:"form-control", placeholder:"Description" %>
        <span class="help-block">Please, type a short descriptiont about event.</span>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit "Cancel", class:"btn btn-default" %>
        <%= f.submit "Create", class:"btn btn-primary" %>
        
      </div>
    </div>
  </fieldset>
</form>

<% end %>